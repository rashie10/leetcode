#include <iostream>
#include <string>
#include <algorithm>

class Solution {
public:
    std::string reverseOnlyLetters(std::string s) {
        int i = 0;
        int j = s.length() - 1;

        while (i < j) {
        
            while (i < j && !isalpha(s[i])) {
                i++;
            }

            while (i < j && !isalpha(s[j])) {
                j--;
            }

           
            if (i < j) {
                std::swap(s[i], s[j]);
              
                i++;
                j--;
            }
        }
        
        return s;
    }
};
