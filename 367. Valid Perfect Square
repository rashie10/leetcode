class Solution {
public:
    bool isPerfectSquare(int num) {
        int low=2;
        int high=num/2;
        if(num<2){
            return true;
        }
        while(low<=high){
            long mid=low+(high-low)/2;
            long sqr=mid*mid;
            if(sqr==num){
                return true;
            }
            else if(sqr<num){
                low=mid+1;

            }
            else{
                high=mid-1;
            }
        }
        return false;
        
    }
};
