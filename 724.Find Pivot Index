int pivotIndex(int* nums, int numsSize) {
    int n = numsSize;

    int prefix[n + 1];
    int suffix[n + 1];

    
    prefix[0] = 0;
    for (int i = 0; i < n; i++) {
        prefix[i + 1] = prefix[i] + nums[i];
    }

    
    suffix[n] = 0;
    for (int i = n - 1; i >= 0; i--) {
        suffix[i] = suffix[i + 1] + nums[i];
    }

    
    for (int i = 0; i < n; i++) {
        if (prefix[i] == suffix[i + 1]) {
            return i;
        }
    }

    return -1;
}
