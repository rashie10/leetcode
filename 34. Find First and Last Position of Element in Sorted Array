class Solution {
public:
    int firstOccur(vector<int>& nums, int target) {   // return type should be int, not vector<int>
        int low = 0;
        int high = nums.size() - 1;
        int first = -1;

        while (low <= high) {
            int mid = low + (high - low) / 2;
            if (nums[mid] == target) {
                first = mid;
                high = mid - 1;  // search left half
            } else if (nums[mid] > target)
                high = mid - 1;
            else
                low = mid + 1;
        }
        return first;
    }

    int lastOccur(vector<int>& nums, int target) {    // same correction here
        int low = 0;
        int high = nums.size() - 1;
        int last = -1;

        while (low <= high) {
            int mid = low + (high - low) / 2;
            if (nums[mid] == target) {
                last = mid;
                low = mid + 1;   // search right half
            } else if (nums[mid] > target)
                high = mid - 1;
            else
                low = mid + 1;
        }
        return last;
    }

    vector<int> searchRange(vector<int>& nums, int target) {
        int first = firstOccur(nums, target);
        int last = lastOccur(nums, target);
        return {first, last};
    }
};
